@model Article

<a class="card mb-4 w-100 hoverable unlink c-link-hover-container" asp-controller="News" asp-action="Article" asp-route-id="@Model.Id">
    <img class="card-img-top" src="@Model.ImageLink" alt="@Model.Headline" >

    <div class="card-body">
        <h5 class="card-title c-link-hover">@Model.Headline</h5>
        <p class="card-text">@Model.ContentSummary</p>
    </div>
    <div class="card-footer text-muted">
        <span>Date: @Model.PublishedDate.ToShortDateString()</span>
        <span>Views: @Model.Views</span>
        <span>Likes: @Model.Likes</span>

        <span>Category: @Model.Category.Name</span>      

    </div>
</a>

<script type="text/javascript">
  
    function LoadArticle(id) {
        let cUrl = '@Url.Content("/News/Article/")';
        window.location.href = cUrl + id;
    }
    
</script>