@using CNewsProject.Service
@inject UserManager<AppUser> userManager
@inject IHttpContextAccessor httpContextAccessor;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CNewsProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CNewsProject.styles.css" asp-append-version="true" />
    <style>
        aside {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-right: 0;
            }

        aside h2 {
            margin-top: 0;
            }

        body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;           
            background-color: #f4f4f4;
            padding-top: 56px;
            }

        .card {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            width: 100%;
            }

        .card-body {
            padding: 20px;
            }

        .card-footer {
            padding: 10px 20px;
            }

        .card:hover {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

        .container {
            max-width: 100%;
            padding-top: 20px;
            padding: 0 20px;
            }

        .content {
            display: flex;
            width: 100%;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            width: 100%;
            margin-top: auto;
            
            }

        header {
            background-color: #333;
            color: #fff;
            padding: 15px 20px;
            }            

        header .nav-link:hover {
            background-color: #555;
            }

        html, body {
            height: 100%;
            margin: 0;
            }

        img {
            max-width: 100%;
            height: auto;
            }

        .item {
            flex: 1 1 200px;
            }        

        .logo img {
            height: 50px;
            margin-right: 20px;
            }

        main {
            display: flex;
            justify-content: space-between;
            padding-top: 20px;
            }        

        .main-article {
            flex: 3;
            border: 1px solid #000;
            background-color: #fff;
            margin-right: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: calc(100% - 240px);
            }        

        .main-article h1 {
            font-size: 2em;
            margin-bottom: 10px;
            text-align: left;
            display: block;
            }

        .main-article h2 {
            font-size: 1.75em;
            margin-top: 15px;
            }

        .main-article img {
            width: 100%;
            height: auto;
            }                

        .main-article p {
            font-size: 1.2em;
            line-height: 1.6;
            text-align: left;
            display: block;
            }

        nav {
            display: flex;
            align-items: center;
            flex-grow: 1;
            }

        .navbar-nav .nav-link {
            font-size: 1.25rem;
            }

        nav ul {
            display: flex;
            gap: 15px;
            }        

        nav ul li {
            margin-bottom: 0;
            }           

        nav ul li a {
            text-decoration: none;
            color: #000;
            padding: 5px 10px;
            }

        nav ul li a:hover {
            background-color: #ddd;
            border-radius: 5px;
            }

        .search-bar {
            display: flex;
            align-items: center;
            margin-left: auto;
            }

        .search-bar input[type="text"] {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            }

        .search-button {
            background: #007BFF;
            color: #fff;
            border-radius: 5px;
            padding: 5px 10px;
            }

        .search-button:hover {
            background: #0056b3;
            }

        .weather-icon {
            font-size: 2em;
            }

        .wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
            }                    
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/content/images/cnewslogo.png" alt="News Logo" style="height: 50px;">
                    CNewsProject
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="News" asp-action="Local">Local</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="News" asp-action="Sweden">Sweden</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="News" asp-action="World">World</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="News" asp-action="Economy">Economy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="News" asp-action="Sport">Sport</a>
                        </li>
                        @{
                            if (httpContextAccessor.HttpContext.User != null)
                            {
                                AppUser user = await userManager.GetUserAsync(httpContextAccessor.HttpContext?.User);
                                bool isJournalist;
                                bool isThePublisher;

                                if (user != null)
                                {
                                    isJournalist = await userManager.IsInRoleAsync(user, "Journalist");
                                    isThePublisher = await userManager.IsInRoleAsync(user, "The Publisher");

                                    if (isJournalist)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Journalist" asp-action="Index">Journalist</a>
                                        </li>
                                    }

                                    if (isThePublisher)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="ThePublisher" asp-action="Index">The Publisher</a>
                                        </li>
                                    }
                                }
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <form class="d-flex" role="search" asp-controller="News" asp-action="Search" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                        <button class="btn btn-outline-success" type="submit" >Search</button>
                    </form>
                    <div class="user-icon">👤</div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* <footer class="border-top footer mt-auto py-3 bg-light text-muted" aria-label="Footer">
        <div class="container">
            <div class="row fixed-bottom">
                <div class="col">
                    &copy; @DateTime.Now.Year - CNewsProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div> 
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
