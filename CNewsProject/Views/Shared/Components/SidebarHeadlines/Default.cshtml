@model SidebarHeadlinesVM

<style>
	td {
		border-bottom: solid lightgray 1px;
		border-top: solid lightgray 1px;
		padding-left: 5px;
		height: 30px;
	}

		td > a {
			color: black;
			text-decoration: none;
			display:block;
		}

		td:hover {
			background-color: lightgray;
		}
</style>

<div class="card">
	<br />
	<a style="color:black; text-decoration:none" asp-controller="News" asp-action="Local"><h2>Local News</h2></a>
	<table>
		@{
			foreach (var item in Model.localArticles)
			{
				<tr><td><a asp-controller="News" asp-action="Article" asp-route-id="@item.Id">@item.Headline</a></td></tr>
			}
		}
	</table><br />
