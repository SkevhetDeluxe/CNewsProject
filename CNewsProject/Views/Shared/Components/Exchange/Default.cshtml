@model Rates

<div class="card">
    <h3>Exchange rates</h3>
    @{
        string usd = string.Format("{0:F2}", Convert.ToDecimal(Model.USD * 100));
        string eur = string.Format("{0:F2}", Convert.ToDecimal(Model.EUR * 100));
        string jpy = string.Format("{0:F2}", Convert.ToDecimal(Model.JPY * 100));
        string cny = string.Format("{0:F2}", Convert.ToDecimal(Model.CNY * 100));
        string gbp = string.Format("{0:F2}", Convert.ToDecimal(Model.GBP * 100));
       

    }
 
    <p>100 SEK equels</p>
    <input id="amountInSek" class="form-control mb-3" type="number" value="100" onchange="updateExchangeRates()" />
    <script type="text/javascript">
        let jusd = @usd;
        let jeur = @eur;
        let jjpy = @jpy;
        let jcny = @cny;
        let jgbp = @gbp;
    </script>
    <ul>
        <li id="liusd">USD : @usd $</li>
        <li id="lieur">EUR : @eur €</li>
        <li id="lijpy">JPY : @jpy Yen</li>
        <li id="licny">CNY : @cny Yuán</li>
        <li id="ligbp">GBP : @gbp £</li>

    </ul>

    
</div>

