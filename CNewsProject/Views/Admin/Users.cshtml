@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "USERS";
}

<h1 class="bg-info text-white">All Users</h1>

<a asp-action="Index" class="btn btn-secondary">Back to Base</a>


<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Manage</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="ManageUser" asp-route-id="@user.Id">
                    Manage
                </a>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="AdminEdit" asp-route-id="@user.Id">
                    Edit
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>