@using CNewsProject.Models.Api.Weather

@model WeatherStats

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CNewsProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CNewsProject.styles.css" asp-append-version="true" />
    <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      display: flex;
      flex-wrap: wrap;
    }
    .item {
      flex: 1 1 200px;
      margin: 10px;
      padding: 20px;
      background-color: #f4f4f4;
      border: 1px solid #ddd;
    }
    img {
      max-width: 100%;
      height: auto;
    }
    
  </style>
</head>


<body>   
    <main>
        <section class="main-article">
            <img src="main-article-image.jpg" alt="Main Article Image">
            <h1>HEADLINE - This might take a lot of space like this or something I guess?</h1>
            <p>Summary here - This article is DEFINITELY worth reading so click me click me click me!!!</p>
        </section>
        <aside>
            <div class="card">
                <h2>Weather</h2>
                <partial name="_WeatherPartial" model="@Model" />
                <div class="weather-icon">☀️</div>
                <p><a href="https://weather.com/sv-SE/weather/today/">Weather</a></p>
                
            </div>
            <div class="card">
                <h2>Exchange rates</h2>
                <ul>
                    <li>USD</li>
                    <li>EUR</li>
                    <li>JPY</li>
                    <li>CNY</li>
                    <li>GBP</li>
                </ul>
                <h2><a href="@Url.Action("Local", "News")">Local news</a></h2>
                <h2><a href="@Url.Action("Sweden", "News")">Swedish news</a></h2>
                <h2><a href="@Url.Action("Economy", "News")">Economy news</a></h2>                
            </div>
        </aside>
    </main>
</body>
</html>

