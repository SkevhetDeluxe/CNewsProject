@model AppUser

@{
	//Vars
	string profileName = Model.UserName + "'s Profile";
}

<h1>@profileName</h1>

<button class="btn" id="edit-acc-btn">Edit Account</button>


<form asp-action="Profile" method="post">
	<input asp-for="Id" type="hidden" />

	<div class="form-group">
		Fire Mode? <input type="checkbox" asp-for="Fire" />
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
</form>

@*I'm thinking a View Component here so you don't have to refresh page on EDIT*@



