@model CNewsProject.Models.Account.Login
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="offset-md-3 col-md-6 offset-sm-2 col-sm-8 offset-1 col-10">
        <h1 class="">Login</h1>
        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-group">
                <label asp-for="EmailUsername">Email or Username</label>
                <input asp-for="EmailUsername" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
            </div>
            <div class="form-group mt-1 mb-1">
                Remember me? <input type="checkbox" asp-for="RememberMe"/>
            </div>
            <button class="btn btn-primary mb-2" type="submit">Log In</button>
        </form>

        
        <a asp-action="ForgotPassword">Forgot password?</a>

        <br/>
        <a asp-action="Register">Register</a>
        
    </div>
</div>
