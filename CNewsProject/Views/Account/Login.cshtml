@model CNewsProject.Models.Account.Login
@{
    ViewData["Title"] = "Login";
}

<h1 class="bg-info text-white">Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="EmailUsername"></label>
        <input asp-for="EmailUsername" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        Remember me? <input type="checkbox" asp-for="RememberMe" />
    </div>
    <button class="btn btn-primary" type="submit">Log In</button>
</form>

<a asp-action="Register" class="btn btn-primary">Register</a>
<br />
<a asp-action="ForgotPassword">Reset Password</a>
