@model PasswordReset

@{
    ViewData["Title"] = "Reset Password";
}
<div class="offset-md-3 col-md-6 offset-sm-2 col-sm-8 offset-1 col-10">
<h4>Reset Password</h4>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="ResetPassword" method="post">
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <button class="btn btn-primary mt-1" type="submit">Submit</button>
</form>

</div>