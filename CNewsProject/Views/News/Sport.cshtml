@model List<Article>

@{
    if (User.Identity.IsAuthenticated)
    {
        if (_iService.GetAppUserByClaimsPrincipal(User).Result.Fire)
        {
            Layout = "_LayoutFire";
            ViewData["Title"] = "Sport Fire News";
        }
        else
        {
            Layout = "_Layout";
        }
    }
    else
    {
        Layout = "_Layout";
        ViewData["Title"] = "Sport News";
    }
}

    <section class="main-article">
        @{
            foreach (Article artikelJavel in Model)
            {
                <partial name="_ArticlePartial" model="artikelJavel" />

            }
        }
    </section>
