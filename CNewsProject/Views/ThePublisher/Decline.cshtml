@model DeclineVM

<form asp-action="Decline" method="post">
    <div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="HeadLine" />
    </div>

    <div class="mb-3">
        <h3>@Model.HeadLine</h3>
    </div>

    <div class="mb-3">
        <label asp-for="Reason">Reason for Decline</label>
        <textarea asp-for="Reason" rows="4" cols="50"></textarea>
    </div>

    <button type="submit" class="btn-danger">Decline</button>
</form>